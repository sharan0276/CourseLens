#include "rect.h”
SimpleWindow ColorWindow("Color Palette", 8.0, 8.0);int ApiMain() {
const int SideSize = 1;float XPosition = 1.5;const float YPosition = 4;ColorWindow.Open();
RectangleShape ColorPatch(ColorWindow,
XPosition, YPosition, White, SideSize, SideSize);
for (int c = Red; c <= Magenta; c = color(c + 1)) {
ColorPatch.SetColor(color(c));ColorPatch.SetPosition(XPosition, YPosition);ColorPatch.Draw();XPosition += SideSize;
}return 0;
}


